<div class="row">
  <aside class="col-sm-3">
    <div class="card-header">
      <h3 class="card-title"><%= current_user.name %></h3>
    </div>
    <div class="card-body">
      <img class="rounded img-fluid" src="<%= gravatar_url(current_user, { size: 200 }) %>" alt="">
    </div>
  </div>
  </aside>
  <div class="col-sm-8">
    <%= render 'posts/posts', posts: @posts %>
  </div>
</div>
